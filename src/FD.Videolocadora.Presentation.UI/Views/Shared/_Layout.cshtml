@using Microsoft.AspNet.Identity
@using FD.Videolocadora.Presentation.UI.Internacionalizacao
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Mensagens.LocaçõesdaVideolocadora, "Index", "locacao", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Mensagens.Genero, "Index", "Genero");</li>
                    <li>@Html.ActionLink(Mensagens.Filme, "Index", "Filmes")</li>
                    <li>@Html.ActionLink(Mensagens.Usuario, "Index", "Usuarios")</li>
                </ul>

                <ul class="nav navnavbar-nav navbar-right">
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("Logoff", "Conta", FormMethod.Post, new { id = "formulario_logoff" }))
                        {

                        }

                        <ul class="nav navnavbar-nav navbar-right">
                            <li><p class="navbar-text">@Mensagens.Ola, @User.Identity.GetUserName() </p></li>
                        </ul>
                        <ul class="nav navnavbar-nav navbar-right">
                            <li> <a href="javascript:document.getElementById('formulario_logoff').submit()">@Mensagens.Sair</a></li>
                        </ul>

                    }
                    else
                    {
                        <ul class="nav navnavbar-nav navbar-right">
                            <li>@Html.ActionLink(Mensagens.Cadastrar, "Registrar", "Conta")</li>
                        </ul>
                        <ul class="nav navnavbar-nav navbar-right">
                            <li class="icon-bar">@Html.ActionLink("Login", "Login", "Conta")</li>
                        </ul>   
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
